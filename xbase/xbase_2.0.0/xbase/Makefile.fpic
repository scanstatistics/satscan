
COMPILATION = -m32
CC = g++
DEBUG = -gstabs+
DEPEND = ${CC} ${COMPILATION} -fPIC -Wno-deprecated -MM -E -I../ -I./

SOURCEFILES = \
   xdate.o \
   exp.o \
   expfunc.o \
   expproc.o \
   fields.o \
   html.o \
   index.o \
   lock.o \
   memo.o \
   ndx.o \
   ntx.o \
   stack.o \
   xbase.o \
   xbexcept.o \
   xbfilter.o \
   xbstring.o \
   dbf.o


.SUFFIXES : .cpp .d .h ${SUFFIXES}

# This makes sure that the .cpp date is later than the .h date. Used for
# dependency generation.
.h.cpp:	chmod 644 $@
	touch $@

# This makes sure that the .cpp date is later than the .cc date. Used for
# dependency generation.
.cc.cpp:
	chmod 644 $@
	touch $@

.cpp.d :
	${DEPEND} $< > $@
	
#--- Ordinary rules
default : libxbase.a	

libxbase.a   : Makedepend.fpic
	${MAKE} -r -f Makedepend.fpic COMPILATION=${COMPILATION} DEBUG=${DEBUG}
	ar r $@ ${SOURCEFILES}
	cp libxbase.a libxbaseg.a
	strip -x libxbase.a
	ar -ts libxbase.a
	rm Makedepend.fpic
	
clean :
	rm -f *.d
	rm -f *.o
	
Makedepend.fpic : Makedepend.fpic.stub ${SOURCEFILES:o=d}
	echo "default : ${SOURCEFILES}" > Makedepend.fpic.1
	cat Makedepend.fpic.stub Makedepend.fpic.1 ${SOURCEFILES:o=d} > Makedepend.fpic
	rm Makedepend.fpic.1
	

 