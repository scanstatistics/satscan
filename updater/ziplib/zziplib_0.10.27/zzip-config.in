#! /bin/sh

prefix="@prefix@"
exec_prefix="@exec_prefix@"
package="@PACKAGE@"
version="@VERSION@"
includedir="@includedir@"
libdir="@libdir@"

if test $# -eq 0; then
    cat <<EOF
Usage:   $package-config [OPTIONS]
Options:
    --prefix[=DIR]) : \$prefix
    --package) : \$package
    --version) : \$version
    --cflags) : -I\$includedir
    --libs) : -L\$libdir -lzzip -lz
EOF
fi

for i in "$@" ; do
    case $i in
    --prefix=*) $prefix=`echo $prefix | sed -e 's/--prefix=//'` ;;
    --prefix) echo $prefix ;;
    --package) echo $package ;;
    --version) echo $version ;;
    --cflags) if test "_$includedir" != "_/usr/include" 
		then echo -I$prefix/include ; fi
	;;
    --libs) echo -L$libdir -lzzip -lz
	;;
    *) echo $i ;;
    esac
done
