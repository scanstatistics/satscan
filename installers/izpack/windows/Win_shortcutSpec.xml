<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="SaTScan"
                location="applications"/>
  <shortcut
    name="SaTScan"
    target="$INSTALL_PATH\SaTScan.exe"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    type="Application"
    description="SaTScan - Software for the Spatial, Temporal and Space-Time Scan Statistics"
    iconFile="$INSTALL_PATH\SaTScan.ico"
    iconIndex="0"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Base"/>
  </shortcut>
  
