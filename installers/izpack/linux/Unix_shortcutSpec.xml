    iconIndex="0"
    initialState="normal"
    type="Application"
    encoding="UTF-8"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Base"/>
  </shortcut>  
  -->
  
  <shortcut name="Uninstall SaTScan"
    target="java"
    commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot; -x -f" 	  
    programGroup="yes"
    encoding="UTF-8"
    type="Application"
    description="Uninstall SaTScan Application">
    desktop="no"
    applications="no"
    <createForPack name="Base" />
  </shortcut>
</izpack:shortcuts>
