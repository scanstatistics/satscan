<izpack:shortcuts version="5.0"                                                                                                 
                  xmlns:izpack="http://izpack.org/schema/shortcuts"                                                             
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"                                                         
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

  <skipIfNotSupported/>
  <programGroup defaultName="SaTScan"
                location="applications"/>
  <shortcut
    name="SaTScan"
    target="java"
    commandLine="-jar -Djava.library.path=$INSTALL_PATH &quot;$INSTALL_PATH/SaTScan.jar&quot;"
    workingDirectory="$INSTALL_PATH"
    description="SaTScan - Software for the Spatial, Temporal and Space-Time Scan Statistics"
    iconFile="$INSTALL_PATH/SaTScan.png"
    iconIndex="0"
    initialState="normal"
    type="Application"
    encoding="UTF-8"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Base"/>
  </shortcut>
  
  <shortcut
    name="SaTScan User's Guide"
    target="acroread"
    url="$INSTALL_PATH/SaTScan_Users_Guide.pdf"
    commandLine="$INSTALL_PATH/SaTScan_Users_Guide.pdf"
    workingDirectory=""
    type="Application"
    description="SaTScan Users Guide"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    encoding="UTF-8"
    startMenu="no"
    startup="no"
    iconFile="acroread"
    iconIndex="0">
    <createForPack name="Base"/>
  </shortcut>

